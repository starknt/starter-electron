{
  "compilerOptions": {
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": [
      "vitest/globals"
    ],
    "baseUrl": "./",
    "paths": {
      "@app/compat-common": [
        "app/compat/common/index.ts"
      ],
      "@app/compat-browser": [
        "app/compat/browser/index.ts"
      ],
      "@app/compat-node": [
        "app/compat/node/index.ts"
      ]
    },
    "composite": true
  },
  "include": [
    "tests",
    "app/electron/tests",
    "app/web/tests",
    "packages"
  ],
  "exclude": [
    "release/app",
    "node_modules"
  ]
}
