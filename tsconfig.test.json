{
  "compilerOptions": {
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": [
      "vitest/globals"
    ],
    "baseUrl": "./",
    "paths": {
      "@app/compat-common": [
        "app/compat/common/index.ts"
      ],
      "@app/compat-browser": [
        "app/compat/browser/index.ts"
      ],
      "@app/compat-node": [
        "app/compat/node/index.ts"
      ],
      "@app/compat-i18n": [
        "app/compat/i18n/index.ts"
      ],
      "@app-electron/*": [
        "app/electron/*"
      ],
      "@app-web/*": [
        "app/web/*"
      ]
    },
    "composite": true
  },
  "include": [
    "tests",
    "app"
  ],
  "exclude": [
    "release/app",
    "node_modules",
    "**/*.d.ts"
  ]
}
