{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@starter/shared": [
        "./packages/shared/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.test.json"
    }
  ],
  "include": [
    "app/electron",
    "app/web",
    "packages"
  ],
  "exclude": [
    "node_modules"
  ]
}
