{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "skipLibCheck": true,
    "types": [
    ],
    "baseUrl": ".",
    "paths": {
      "@starter/shared": [
        "../../packages/shared/src/index.ts"
      ]
    }
  },
  "include": [
    "auto-imports.d.ts",
    "components.d.ts",
    "env.d.ts",
    "shims.d.ts",
    "*.ts",
    "*.vue",
    "*.tsx"
  ],
  "exclude": [
    "tests",
    "vite.config.ts"
  ]
}
