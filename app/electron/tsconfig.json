{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": [
      "node",
      "eevi/eevi-is"
    ],
    "paths": {
      "@starter/shared": [
        "../../packages/shared/src/index.ts"
      ],
      "@starter/eioc": [
        "../../packages/eioc/src/index.ts"
      ]
    }
  },
  "exclude": [
    "tests"
  ]
}
