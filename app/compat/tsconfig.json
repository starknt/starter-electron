{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": [
      "node",
      "eevi/eevi-is",
      "electron"
    ],
    "paths": {
      "@app/compat-common/*": [
        "common/*"
      ],
      "@app/compat-browser/*": [
        "browser/*"
      ],
      "@app/compat-node/*": [
        "node/*"
      ],
      "@app/compat-i18n": [
        "i18n/index.ts"
      ]
    }
  }
}
