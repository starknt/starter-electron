{
  "name": "@electron/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.9.0",
  "description": "An electron template based on Vite and Esbuild.",
  "author": "starknt",
  "license": "GPL-2.0",
  "keywords": [
    "electron",
    "electron-builder",
    "template",
    "vite",
    "vite-electron",
    "vitest",
    "hot",
    "fast"
  ],
  "scripts": {
    "dev": "pnpm clean && vite -c ./app/web/vite.config.ts",
    "build": "pnpm clean && vite -c ./app/web/vite.config.ts build",
    "package": "esno scripts/clean-native.ts && pnpm build && electron-builder",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm build && vitest run --passWithNoTests",
    "test:unit": "vitest run unit --passWithNoTests",
    "test:e2e": "pnpm build && vitest run e2e --passWithNoTests",
    "test:watch": "vitest -u",
    "test:coverage": "rimraf coverage && vitest run --coverage --passWithNoTests",
    "postinstall": "node scripts/setup.mjs && electron-builder install-app-deps",
    "typecheck:electron": "npx tsc --noEmit -p app/electron/tsconfig.json",
    "typecheck:web": "vue-tsc --noEmit -p app/web/tsconfig.json",
    "typecheck": "concurrently \"pnpm typecheck:electron\" \"pnpm typecheck:web\"",
    "clean": "esno scripts/clean.ts",
    "prepare": "npx simple-git-hooks"
  },
  "dependencies": {
    "@vueuse/core": "^9.1.0",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^18.7.3",
    "@types/node-abi": "^3.0.0",
    "@types/rimraf": "^3.0.2",
    "@vitejs/plugin-vue": "^3.0.3",
    "c8": "^7.12.0",
    "concurrently": "^7.3.0",
    "eevi": "^0.2.1",
    "electron": "^19.0.0",
    "electron-builder": "^23.3.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.21.0",
    "esno": "^0.16.3",
    "happy-dom": "^6.0.4",
    "lint-staged": "^13.0.3",
    "node-abi": "^3.24.0",
    "playwright": "^1.25.0",
    "pnpm": "7.9.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "unocss": "^0.44.7",
    "unplugin-auto-import": "^0.10.3",
    "unplugin-vue-components": "^0.21.2",
    "vite": "^3.0.7",
    "vitest": "^0.18.1",
    "vue-tsc": "^0.39.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "eslint --fix",
      "git add"
    ],
    "*.{yml, yaml}": [
      "eslint --fix",
      "git add"
    ]
  }
}
