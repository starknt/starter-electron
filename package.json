{
  "name": "@electron/boilerplate",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.9.0",
  "description": "An electron template based on Vite and Esbuild.",
  "author": "starknt",
  "license": "MIT",
  "keywords": [
    "electron",
    "electron-builder",
    "template",
    "vite",
    "vite-electron",
    "vitest",
    "hot",
    "fast"
  ],
  "engines": {
    "node": ">=14.18.0 || >=16.0.0"
  },
  "scripts": {
    "dev": "vite -c ./app/web/vite.config.ts",
    "build": "pnpm clean && vite -c ./app/web/vite.config.ts build",
    "package": "pnpm build && esno ./scripts/make-installer.ts",
    "release": "bumpp package.json release/app/package.json --commit --push --tag",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm build && vitest run --passWithNoTests",
    "test:unit": "vitest run unit --passWithNoTests",
    "test:e2e": "pnpm build && vitest run e2e --passWithNoTests",
    "test:watch": "vitest -u",
    "test:coverage": "rimraf coverage && vitest run --coverage --passWithNoTests",
    "postinstall": "electron-builder install-app-deps && esno ./scripts/link-modules.ts && esno ./scripts/electron-rebuild.ts",
    "typecheck:electron": "npx tsc --noEmit -p app/electron/tsconfig.json",
    "typecheck:web": "vue-tsc --noEmit -p app/web/tsconfig.json",
    "typecheck": "concurrently \"pnpm typecheck:electron\" \"pnpm typecheck:web\"",
    "clean": "esno scripts/clean-cli.ts",
    "prepare": "npx simple-git-hooks",
    "commit": "git add . && git cz"
  },
  "dependencies": {
    "@vueuse/core": "^9.2.0",
    "vue": "^3.2.39"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@types/better-sqlite3": "^7.6.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.7.18",
    "@types/node-abi": "^3.0.0",
    "@types/rimraf": "^3.0.2",
    "@vitejs/plugin-vue": "^3.1.0",
    "bumpp": "^8.2.1",
    "c8": "^7.12.0",
    "commitizen": "^4.2.5",
    "concurrently": "^7.4.0",
    "consola": "^2.15.3",
    "cz-conventional-changelog": "^3.3.0",
    "eevi": "^0.3.1",
    "electron": "^19.0.17",
    "electron-builder": "^23.3.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.23.1",
    "esno": "^0.16.3",
    "fs-extra": "^10.1.0",
    "happy-dom": "^6.0.4",
    "lint-staged": "^13.0.3",
    "node-abi": "^3.24.0",
    "playwright": "^1.25.2",
    "pnpm": "7.11.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "unocss": "^0.45.21",
    "unplugin-auto-import": "^0.11.2",
    "unplugin-vue-components": "^0.22.7",
    "vite": "^3.1.2",
    "vitest": "^0.23.2",
    "vue-tsc": "^0.40.13"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "eslint --fix",
      "git add"
    ],
    "*.{yml, yaml}": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "build": {
    "directories": {
      "app": "release/app",
      "output": "release/build"
    }
  }
}
